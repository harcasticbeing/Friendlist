<div class="container bg-dark text-white border border-dark p-3 rounded-3" >
  <div class="container border-bottom">
    <h1 class="display-1"><%= @friend.first_name %> <%= @friend.last_name %>  </h1>
  </div>
  <div class="container mt-4 fs-3 fw-light">
    <%= @friend.email %> | +91 <%= @friend.phone %> | <%= @friend.twitter %>
  </div>
  <div class="container mt-4">
    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-outline-light" %> <%= link_to "Go Back", friends_path, class: "btn btn-outline-light ms-3" %>
  </div>
  <div class="container mt-4">
    <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
